                @*     <p> *@
                @*         <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Forgot your password?</a> *@
                @*     </p> *@
                @*     <p> *@
                @*         <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">vous n'avez pas encore de compte? Inscription</a> *@
                @*     </p> *@
                @*     <p> *@
                @*         <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">Resend email confirmation</a> *@
                @*     </p> *@
                @* </div> *@
            </form>
        </section>
    </div>
    <!-- Background Image Column -->
    <div class="col-lg-6 d-flex align-items-center justify-content-center">
        <img src="~/image/bgLogin.svg" class="img-fluid" alt="Login Background" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
                                document.getElementById('passwordToggle').addEventListener('click', function () {
        var passwordInput = document.getElementById('Input_Password');
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            this.querySelector('i').classList.replace('fa-eye', 'fa-eye-slash');
        } else {
            passwordInput.type = "password";
            this.querySelector('i').classList.replace('fa-eye-slash', 'fa-eye');
        }
    });

        function updatePasswordStrength(password) {
        var strength = 0;
        // Check for lowercase letters
        if (password.match(/[a-z]/)) strength++;
        // Check for uppercase letters
        if (password.match(/[A-Z]/)) strength++;
        // Check for numbers
        if (password.match(/\d/)) strength++;
        // Check for special characters
        if (password.match(/[^a-zA-Z\d]/)) strength++;
        // Check for minimum length
        if (password.length >= 8) strength++;

        // Calculate strength level
        var level;
        if (strength >= 3) {
            level = 'strong';
        } else if (strength >= 2) {
            level = 'medium';
        } else {
            level = 'weak';
        }

        // Update strength bars
        var bars = document.querySelectorAll('#passwordStrength .strength-bar');
        bars.forEach(function(bar, index) {
            if (index < strength) {
                bar.style.backgroundColor = level === 'strong' ? 'green' : level === 'medium' ? 'yellow' : 'red';
            } else {
                bar.style.backgroundColor = '#D9D9D9'; // Gray for inactive bars
            }
        });

    var message;
    if (password === '') {
        message = '';
    } else if (level === 'strong') {
        message = "Votre mot de passe est fort.";
    } else if (level === 'medium') {
        message = "Votre mot de passe est passable.";
    } else {
        message = "Votre mot de passe est faible.";
    }

    document.getElementById('passwordMessage').innerHTML = message;
    }

    // Attach event listener to password input
    document.getElementById('Input_Password').addEventListener('input', function() {
        var password = this.value;
        updatePasswordStrength(password);
    });
</script>